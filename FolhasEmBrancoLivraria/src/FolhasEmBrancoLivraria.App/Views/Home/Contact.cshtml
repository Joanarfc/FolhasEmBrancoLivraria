@{
    ViewData["Title"] = "Nossos contatos";
}
<h3 style="padding-top: 50px">@ViewData["Title"]</h3>

<hr />

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />

<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>

<div class="row">
    <div class="col-md-6">
        <div class="container">
            <h5 style="padding-top: 10px">Telefone</h5><br />
            <i class="fa fa-phone-square" aria-hidden="true"></i>
            +55 61 12345 - 1234
        </div>
        <br />
        <br />
        <div class="container" id="mail">
            <h5 style="padding-top: 10px">Email</h5>
            <i class="fa fa-share" aria-hidden="true"></i>
            <email></email>
        </div>
        <br />
    </div>

    <div class="form-group col-md-6">
        <h5 style="padding-top: 10px">Localização</h5><br />
        <i class="fa fa-map-marker" aria-hidden="true"></i>
        <address>
            St. Sudoeste Comércio Local Sudoeste 103 <br />
            Cruzeiro / Sudoeste / Octogonal<br />
            Brasília - DF<br />
            70670-520<br />
        </address>
        <div id="mapDiv" style="width: 400px; height: 250px"></div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/script_mapa_localizacao.js"></script>
    }
