@model IEnumerable<FolhasEmBrancoLivraria.App.ViewModels.ProdutoViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAtivo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/imagens/livros/@item.Imagem" alt="@item.Imagem" style="width: 70px; height:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>

                <td>
                    @item.Valor.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                    @if (item.IsAtivo == true)
                    {
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="fa fa-square-o" aria-hidden="true">@Html.DisplayFor(modelItem => item.IsAtivo)</i>
                    }
                </td>

                <td>
                    <div id="buttons">
                        <a class="btn btn-info" asp-action="Details" asp-controller="Produtos" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Produtos" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Produtos" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
