@model FolhasEmBrancoLivraria.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Eliminar - " + Model.Nome + " de " + Model.Autor;
}

<h3 style="padding-top: 50px">@ViewData["Title"]</h3>


<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/livros/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 400px" />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Autor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Autor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ano)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ano)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAtivo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsAtivo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dd>
        </dl>
        <br />
        <h4 class="text-danger">Tem a certeza que quer eliminar este produto?</h4>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </form>
    </div>
</div>
