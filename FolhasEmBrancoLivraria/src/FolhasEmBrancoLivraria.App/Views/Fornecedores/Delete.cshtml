@using FolhasEmBrancoLivraria.App.Extensions
@model FolhasEmBrancoLivraria.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Eliminar - " + Model.Nome;
}

<h1>@ViewData["Title"]</h1>


    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.CpfCnpjFormatacao(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoFornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAtivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAtivo)
        </dd>
    </dl>

    <br />
    <h4 class="text-danger">Tem a certeza que quer eliminar este fornecedor?</h4>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </form>
